{
    "compilerOptions": {
        "strictPropertyInitialization": false, 
        "noImplicitAny": false,
        "noLib": false,
        "noUnusedLocals": true,
        "newLine": "LF",
        "noEmit": false,
        "listEmittedFiles": true,
        "declarationDir": "dist",
        "declaration": true,
        "removeComments": true,
        "allowUnreachableCode": true,
        "baseUrl": "./",
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [
            "es7",
            "dom",
            "esnext.asynciterable"
        ],
        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "./",
        "sourceMap": true,
        "strict": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}