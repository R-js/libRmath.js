{
    "extends": "./tsconfig.json",
    "exclude": [
      "node_modules"
    ],
    "compilerOptions": {
      "types": ["node", "jest"],
      "target": "ES2020",
      "baseUrl": "./src",
      "paths": {
        "@common/*": ["lib/common/*", "packages/common/*", "packages/__test__/*"],
        "@lib/*": ["lib/*"],
        "@rng/*": ["lib/rng/*"],
        "@special/*": ["lib/special/*"],
        "@trig/*": ["lib/trigonometry/*"],
        "@dist/*": ["lib/distributions/*"]
      },
      "plugins": [
        {
          "name": "typescript-eslint-language-service"
        }
      ],
    },
    "include": ["src/"],
  }
  