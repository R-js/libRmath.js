{
    "extends": "./tsconfig.json",
    "exclude":[
        "**/__test__"
    ],
    "compilerOptions": {
        "noEmit": false,
        "module": "es2020",
        "outDir": "es6",
        "target": "ES2020",
        "removeComments": true,
        "declaration": false, // generate decleration files, make sure they go into a declarationDir
        "declarationMap": false, // make map files for .d.ts files
    }
}