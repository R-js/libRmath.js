{
    "extends": "./tsconfig.json",
    "exclude":[
        "**/__test__",
        "src/packages/test-helpers/*.ts",
        "src/packages/jest-extension.ts",
        "test",
        "node_modules/",
        "es6",
        "commonjs",
        "coverage",
        ".vscode",
        ".jest-cache"
    ],
    "compilerOptions": {
        "noEmit": false,
        "module": "es2020",
        "outDir": "es6",
        "target": "ES2020",
        "removeComments": true,
        "declaration": true, // generate declaration files, make sure they go into a declarationDir
        "declarationDir": "./es6/types",
        "declarationMap": true // make map files for .d.ts files
    }
}